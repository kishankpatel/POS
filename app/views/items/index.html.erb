<%=link_to "Add Item", new_item_path, class:"btn btn-success create-btn" %>

<h1>Items</h1>

<table class="table table-striped table-hover" id="itemsTable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Tags</th>
      <th>Created by</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to item.name, item %></td>
        <td><%= item.price %></td>
        <td><%= item.tags %></td>
        <td><%= item.creator.email %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

