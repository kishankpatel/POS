<div class="login-form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h2 class="text-center">Sign in</h2>   
    <div class="form-group">
      <div class="input-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Email" %>    
        </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", required: true, placeholder:"Password" %>    

      </div>
    </div>        
    <div class="form-group">
      <%= f.submit "Log in", :class => "btn btn-primary login-btn btn-block" %>
    </div>
    <div class="clearfix">
        <% if devise_mapping.rememberable? -%>
          <label class="pull-left checkbox-inline"><%= f.check_box :remember_me %> Remember me</label>
        <% end -%>
    </div>
  <% end %>
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class="text-center text-muted small">Don't have an account? <%= link_to "Sign up here!", new_registration_path(resource_name) %></p>
    
  <% end -%>
</div>