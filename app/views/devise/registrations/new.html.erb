<div class="login-form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="text-center">Sign Up</h2>   
    <div class="form-group">
      <div class="input-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true, placeholder:"Email" %>    
        </div>
    </div>
    <div class="form-group">
      <div class="input-group">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control", required: true, placeholder:"Password" %>    

      </div>
    </div>  
    <div class="form-group">
      <div class="input-group">
        <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: "form-control", required: true, placeholder:"Confirm Password" %>    
      </div>
    </div>        
    <div class="form-group">
      <%= f.submit "Sign up", :class => "btn btn-primary login-btn btn-block" %>
    </div>
    <div class="clearfix"></div>
  <% end %>
  <%- if controller_name != 'sessions' %>
    <p class="text-center text-muted small">Already have an account? <%= link_to "Log in", new_session_path(resource_name) %></p>
  <% end -%>
</div>
